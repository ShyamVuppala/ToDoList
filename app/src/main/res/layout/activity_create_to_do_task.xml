<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" tools:context="com.utilities.shyamv.todolist.CreateToDoTaskActivity">
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:hint="Enter Title here..."
        android:background="@null"
        android:minHeight="40dp" />

    <View style="@style/Divider"
        android:id="@+id/divider1"
        android:layout_below="@+id/titleText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Date"
        android:id="@+id/datePickerBtn"
        android:background="@null"
        android:layout_below="@+id/divider1" />

    <View style="@style/Divider"
        android:id="@+id/divider3"
        android:layout_below="@+id/datePickerBtn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:id="@+id/timePickerBtn"
        android:background="@null"
        android:layout_below="@+id/divider3" />

    <View style="@style/Divider"
        android:id="@+id/divider4"
        android:layout_below="@+id/timePickerBtn" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/toDoTaskTxt"
        android:hint="Enter description here..."
        android:layout_below="@+id/divider4"
        android:background="@null"
        android:minHeight="40dp" />

    <View style="@style/Divider"
        android:id="@+id/divider2"
        android:layout_below="@+id/toDoTaskTxt" />


</RelativeLayout>
</ScrollView>
