<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools" tools:context=".ToDoTaskDetailFragment">
<RelativeLayout
android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp" android:onClick="onClickScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:textColor="#ff000000"
        android:minHeight="40dp"
        android:layout_alignParentBottom="false"
        android:gravity="center_vertical" />

    <View style="@style/Divider"
        android:id="@+id/divider1" android:layout_below="@+id/titleText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/dateTimeText"
        android:layout_below="@+id/divider1"
        android:textSize="20dp"
        android:minHeight="40dp"
        android:gravity="center_vertical" />

    <View style="@style/Divider"
        android:id="@+id/divider2" android:layout_below="@+id/dateTimeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/descriptionText"
        android:layout_below="@+id/divider2"
        android:textSize="20dp"
        android:minHeight="40dp"
        android:gravity="center_vertical" />

</RelativeLayout>
</ScrollView>